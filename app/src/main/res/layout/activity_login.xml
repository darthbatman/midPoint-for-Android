<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nikhil.myapplication.LoginActivity"
    android:background="@drawable/blurred_map">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Username"
        android:textColor="#727272" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordET"
        android:layout_marginTop="68dp"
        android:password="true"
        android:hint="Password"
        android:textColor="#727272"
        android:layout_below="@+id/usernameET"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/usernameET" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:background="#00BCD4"
        android:onClick="onLoginButtonClick"
        android:layout_marginTop="105dp"
        android:layout_below="@+id/passwordET"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/createNewAccountButton"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Account"
        android:id="@+id/createNewAccountButton"
        android:background="#00BCD4"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/loginButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <!-- unused-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/loginFailureTV"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#820c1c" />

</RelativeLayout>
