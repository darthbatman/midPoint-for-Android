<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:animateLayoutChanges="true"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AddLocations"
    android:background="#ffffff">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressEditText"
        android:hint="Enter an address or a place"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/addButton"
        android:layout_alignParentStart="true" />

    <EditText
        android:hint="Type of place (theater, etc)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeEditText"
        android:layout_below="@+id/addressEditText"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/friendAddressButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submitButton"
        android:onClick="onSubmitButtonClick"
        android:background="#536DFE"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/friendAddressButton" />

    <Button
        android:layout_marginRight="10dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:onClick="onClearButtonClick"
        android:background="#536DFE"
        android:id="@+id/button2"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/submitButton" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/submitButton"
        android:background="#ffffff"
        android:layout_below="@+id/addLocationButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_marginLeft="10dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/addButton"
        android:src="@mipmap/ic_action_new"
        android:onClick="onAddButtonClick"
        android:background="#536DFE"
        android:text="Add"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your\nLocation"
        android:id="@+id/addLocationButton"
        android:layout_below="@+id/typeEditText"
        android:layout_toStartOf="@+id/button2"
        android:layout_alignBottom="@+id/friendAddressButton"
        android:layout_alignEnd="@+id/button2"
        android:onClick="onYourLocationButtonClick"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friends"
        android:id="@+id/friendAddressButton"
        android:layout_below="@+id/typeEditText"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
