<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:animateLayoutChanges="false"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AddLocations"
    android:background="#FFFFFF">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressEditText"
        android:hint="Enter an address or a place"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/addButton" />

    <EditText
        android:hint="Type of place (theater, etc)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/typeEditText"
        android:layout_below="@+id/addressEditText"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/addressEditText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        android:id="@+id/submitButton"
        android:onClick="onSubmitButtonClick"
        android:background="@drawable/roundedbutton"
        android:textColor="#7f7f7f"
        android:layout_below="@+id/typeEditText"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:onClick="onClearButtonClick"
        android:src="@drawable/small_delete"
        android:id="@+id/button2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/addLocationButton"
        android:layout_alignEnd="@+id/typeEditText" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:id="@+id/listView"
        android:background="#FFFFFF"
        android:smoothScrollbar="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/button2" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addButton"
        android:src="@drawable/small_add"
        android:onClick="onAddButtonClick"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/addressEditText" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addLocationButton"
        android:onClick="onYourLocationButtonClick"
        android:src="@drawable/small_user_location"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/typeEditText"
        android:layout_alignStart="@+id/addButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addFriendLocationButton"
        android:background="@drawable/small_add_friend"
        android:layout_below="@+id/addButton"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/addButton"
        android:onClick="onAddFriendButtonClick"/>
        <!--android:layout_alignBottom="@id/addLocationButton"-->



</RelativeLayout>
